{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "NoitaSaveManager_Gui",
    "version": "4.1.0",
    "identifier": "com.xiaomony.noitasavemanager-gui",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "NoitaSaveManager GUI",
                "width": 1200,
                "height": 800,
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "./icons/Circle of Vigour.ico"
        ]
    }
}
